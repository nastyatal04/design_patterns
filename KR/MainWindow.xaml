<Window x:Class="KR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="415">
    <Grid HorizontalAlignment="Left" Width="800">
        <TreeView x:Name="AirplanesTree" Margin="10,10,400,50"/>
        <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="24,396,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Click="btnAdd_Click" />
        <Button x:Name="btnUpdate" Content="Изменить" HorizontalAlignment="Left" Margin="143,396,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="268,396,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Click="btnDelete_Click"/>
    </Grid>
</Window>
